<Window x:Class="D026.WPF專案的工作進度與取消.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D026.WPF專案的工作進度與取消"
        mc:Ignorable="d"
        Title="D026.WPF專案的工作進度與取消" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ProgressBar x:Name="probar進度棒" 
                     Grid.ColumnSpan="2"
                     IsIndeterminate="False"
                     Maximum="100" Minimum="0"
                     Value="10"
                     />
        <Button x:Name="btn開始" Content="開始" 
                Grid.Row="1" Grid.Column="0" FontSize="32" Click="btn開始_Click"
                />
        <Button x:Name="btn取消" Content="取消" 
                Grid.Row="1" Grid.Column="1" FontSize="32" Click="btn取消_Click"
                />
    </Grid>
</Window>
